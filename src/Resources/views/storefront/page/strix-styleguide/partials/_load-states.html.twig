{# Loading states: Spinners, Progress & Placeholders #}
{% from '@StrixNLUxUpgrades/storefront/page/strix-styleguide/partials/_macros.html.twig' import cap %}

{{ cap('Loading states (Spinners, Progress & Placeholders)') }}

<div
     class="row g-4">

    {# ---------- Spinners (expanded) ---------- #}
    <div class="col-lg-6">
        <div class="small text-muted text-uppercase mb-2">Spinners</div>
        <div class="border rounded-1 p-3">
            <div class="small text-muted mb-2">Border vs Grow</div>
            <div class="d-flex align-items-center flex-wrap gap-3 mb-3">
                <div class="spinner-border" role="status" aria-label="Loading"></div>
                <div class="spinner-grow" role="status" aria-label="Loading"></div>
                <div class="spinner-border spinner-border-sm" role="status" aria-label="Loading small"></div>
                <div class="spinner-grow spinner-grow-sm" role="status" aria-label="Loading small"></div>
            </div>

            <div class="small text-muted mb-2">Context colors</div>
            <div class="d-flex align-items-center flex-wrap gap-3 mb-3">
                <div class="spinner-border text-primary" role="status" aria-label="Loading primary"></div>
                <div class="spinner-border text-secondary" role="status" aria-label="Loading secondary"></div>
                <div class="spinner-border text-success" role="status" aria-label="Loading success"></div>
                <div class="spinner-border text-info" role="status" aria-label="Loading info"></div>
                <div class="spinner-border text-warning" role="status" aria-label="Loading warning"></div>
                <div class="spinner-border text-danger" role="status" aria-label="Loading danger"></div>
                <div class="spinner-border text-dark" role="status" aria-label="Loading dark"></div>
            </div>

            <div class="small text-muted mb-2">Inline in button</div>
            <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
                <button class="btn btn-primary" type="button" disabled>
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    Loading…
                </button>
                <button class="btn btn-outline-secondary" type="button" disabled>
                    <span class="spinner-grow spinner-grow-sm me-2" role="status" aria-hidden="true"></span>
                    Loading…
                </button>
            </div>

            <div class="small text-muted mb-2">Centered block</div>
            <div class="border rounded py-4 d-flex justify-content-center">
                <div class="spinner-border" role="status" aria-label="Loading centered">
                    <span class="visually-hidden">Loading…</span>
                </div>
            </div>
        </div>
    </div>

    {# ---------- Progress ---------- #}
    <div class="col-lg-6">
        <div class="small text-muted text-uppercase mb-2">Progress</div>
        <div class="border rounded-1 p-3">
            <div class="progress mb-2" style="height: 0.5rem;">
                <div class="progress-bar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="progress mb-2">
                <div class="progress-bar bg-success" style="width: 40%;" aria-valuenow="40"></div>
            </div>
            <div class="progress mb-2">
                <div class="progress-bar bg-info" style="width: 15%;" aria-valuenow="15"></div>
                <div class="progress-bar bg-warning" style="width: 30%;" aria-valuenow="30"></div>
                <div class="progress-bar bg-danger" style="width: 20%;" aria-valuenow="20"></div>
            </div>
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 60%;" aria-valuenow="60"></div>
            </div>
        </div>
    </div>

    {# ---------- Placeholders (Bootstrap skeletons) ---------- #}
    <div class="col-12">
        <div class="small text-muted text-uppercase mb-2">Placeholders</div>
        <div
             class="border rounded-1 p-3">

            {# Glow text block #}
            <div class="mb-3">
                <div class="placeholder-glow">
                    <span class="placeholder col-7"></span>
                    <span class="placeholder col-4"></span>
                    <span class="placeholder col-4"></span>
                    <span class="placeholder col-6"></span>
                    <span class="placeholder col-8"></span>
                </div>
                <div class="text-muted small mt-1">.placeholder-glow with mixed widths</div>
            </div>

            {# Wave text block #}
            <div class="mb-3">
                <div class="placeholder-wave">
                    <span class="placeholder col-6"></span>
                    <span class="placeholder col-8"></span>
                    <span class="placeholder col-5"></span>
                </div>
                <div class="text-muted small mt-1">.placeholder-wave with mixed widths</div>
            </div>

            {# Button & input placeholders #}
            <div class="row g-3">
                <div class="col-sm-6">
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn disabled placeholder col-5" aria-disabled="true"></a>
                        <a class="btn btn-primary disabled placeholder col-5" aria-disabled="true"></a>
                    </div>
                    <div class="text-muted small mt-1">Button placeholders</div>
                </div>
                <div class="col-sm-6">
                    <div class="placeholder-wave">
                        <span class="placeholder col-12" style="height: 38px;"></span>
                    </div>
                    <div class="text-muted small mt-1">Input-sized placeholder</div>
                </div>
            </div>

            {# Card skeleton #}
            <div class="card mt-3" aria-hidden="true">
                <div class="card-body">
                    <h5 class="card-title placeholder-glow mb-2">
                        <span class="placeholder col-6"></span>
                    </h5>
                    <p class="card-text placeholder-glow">
                        <span class="placeholder col-7"></span>
                        <span class="placeholder col-4"></span>
                        <span class="placeholder col-4"></span>
                        <span class="placeholder col-6"></span>
                        <span class="placeholder col-8"></span>
                    </p>
                    <a class="btn btn-primary disabled placeholder col-4" aria-disabled="true"></a>
                </div>
            </div>

            <div class="text-muted small mt-2">
                Placeholders are purely visual; they don’t load data or run JS in this styleguide.
            </div>
        </div>
    </div>

</div>
