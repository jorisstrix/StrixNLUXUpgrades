{# Lists, List Group, Tabs & Accordion #}
{% from '@StrixNLUxUpgrades/storefront/page/strix-styleguide/partials/_macros.html.twig' import cap %}

{{ cap('Lists, List Group, Tabs & Accordion') }}

<div
	class="row g-4">

	{# ---------- Lists ---------- #}
	<div class="col-lg-6">
		<div class="small text-muted text-uppercase mb-2">Lists</div>

		<div class="row g-3">
			<div class="col-sm-6">
				<div class="small text-muted mb-1">Unordered</div>
				<ul class="mb-0">
					<li>First item</li>
					<li>Second item</li>
					<li>Third item</li>
				</ul>
			</div>

			<div class="col-sm-6">
				<div class="small text-muted mb-1">Ordered</div>
				<ol class="mb-0">
					<li>First item</li>
					<li>Second item</li>
					<li>Third item</li>
				</ol>
			</div>

			<div class="col-12">
				<div class="small text-muted mb-1">Inline</div>
				<ul class="list-inline mb-0">
					<li class="list-inline-item">One</li>
					<li class="list-inline-item">Two</li>
					<li class="list-inline-item">Three</li>
				</ul>
			</div>
		</div>
	</div>

	{# ---------- List group ---------- #}
	<div class="col-lg-6">
		<div class="small text-muted text-uppercase mb-2">List group</div>

		<div class="row g-3">
			<div class="col-sm-6">
				<div class="small text-muted mb-1">Basic</div>
				<ul class="list-group">
					<li class="list-group-item">A simple item</li>
					<li class="list-group-item">Another item</li>
					<li class="list-group-item">Third item</li>
				</ul>
			</div>

			<div class="col-sm-6">
				<div class="small text-muted mb-1">Active / Disabled</div>
				<ul class="list-group">
					<li class="list-group-item active" aria-current="true">Active item</li>
					<li class="list-group-item">Default item</li>
					<li class="list-group-item disabled" aria-disabled="true">Disabled item</li>
				</ul>
			</div>

			<div class="col-sm-6">
				<div class="small text-muted mb-1">Flush</div>
				<ul class="list-group list-group-flush border rounded">
					<li class="list-group-item">Header is outside flush group</li>
					<li class="list-group-item">Second</li>
					<li class="list-group-item">Third</li>
				</ul>
			</div>

			<div class="col-sm-6">
				<div class="small text-muted mb-1">Numbered</div>
				<ol class="list-group list-group-numbered">
					<li class="list-group-item">First</li>
					<li class="list-group-item">Second</li>
					<li class="list-group-item">Third</li>
				</ol>
			</div>

			<div class="col-sm-6">
				<div class="small text-muted mb-1">With badges</div>
				<ul class="list-group">
					<li class="list-group-item d-flex justify-content-between align-items-center">
						Orders
						<span class="badge bg-primary rounded-pill">14</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center">
						Messages
						<span class="badge bg-secondary rounded-pill">3</span>
					</li>
				</ul>
			</div>
		</div>
	</div>

	{# ---------- Tabs (static) ---------- #}
	<div class="col-lg-6">
		<div class="small text-muted text-uppercase mb-2">Tabs</div>

		<ul class="nav nav-tabs" role="tablist" aria-label="Example tabs">
			<li class="nav-item" role="presentation">
				<a class="nav-link active" href="#" aria-current="page" tabindex="0">Home</a>
			</li>
			<li class="nav-item" role="presentation">
				<span class="nav-link">Profile</span>
			</li>
			<li class="nav-item" role="presentation">
				<span class="nav-link">Contact</span>
			</li>
		</ul>

		<div class="border border-top-0 rounded-bottom p-3">
			<div class="small text-muted mb-1">Active pane</div>
			<p class="mb-0">Static example of a tabâ€™s content area.</p>
		</div>
	</div>

	{# ---------- Pills (static) ---------- #}
	<div class="col-lg-6">
		<div class="small text-muted text-uppercase mb-2">Pills</div>

		<ul class="nav nav-pills" role="tablist" aria-label="Example pills">
			<li class="nav-item" role="presentation">
				<a class="nav-link active" href="#" aria-current="page" tabindex="0">Active</a>
			</li>
			<li class="nav-item" role="presentation">
				<span class="nav-link">Link</span>
			</li>
			<li class="nav-item" role="presentation">
				<span class="nav-link disabled" aria-disabled="true">Disabled</span>
			</li>
		</ul>

		<div class="border rounded p-3 mt-2">
			<div class="small text-muted mb-1">Active pill content</div>
			<p class="mb-0">Static example of pill content area.</p>
		</div>
	</div>

	{# ---------- Accordion (static) ---------- #}
	<div class="col-lg-12">
		<div class="small text-muted text-uppercase mb-2">Accordion</div>

		<div class="accordion" id="sgAccordion">
			<div class="accordion-item">
				<h2 class="accordion-header" id="sgHeadingOne">
					<button class="accordion-button" type="button" aria-expanded="true" aria-controls="sgCollapseOne">
						Accordion Item #1
					</button>
				</h2>
				<div id="sgCollapseOne" class="accordion-collapse collapse show" aria-labelledby="sgHeadingOne">
					<div class="accordion-body">
						This panel is expanded by default to show default spacing and typography.
					</div>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="sgHeadingTwo">
					<button class="accordion-button collapsed" type="button" aria-expanded="false" aria-controls="sgCollapseTwo">
						Accordion Item #2
					</button>
				</h2>
				<div id="sgCollapseTwo" class="accordion-collapse collapse" aria-labelledby="sgHeadingTwo">
					<div class="accordion-body">
						Closed panel example (no JavaScript interaction in the styleguide).
					</div>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="sgHeadingThree">
					<button class="accordion-button collapsed" type="button" aria-expanded="false" aria-controls="sgCollapseThree">
						Accordion Item #3
					</button>
				</h2>
				<div id="sgCollapseThree" class="accordion-collapse collapse" aria-labelledby="sgHeadingThree">
					<div class="accordion-body">
						Another collapsed panel for visual reference.
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
