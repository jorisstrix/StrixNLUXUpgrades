{% from '@StrixNLUxUpgrades/storefront/page/strix-styleguide/partials/_macros.html.twig' import cap %}

{{ cap('Borders & Radius') }}

<div
     class="row g-3">
    {# ======================= BORDERS ======================= #}
    <div class="col-lg-6">
        <div class="border rounded-1 p-3 h-100">
            <div class="small text-muted text-uppercase mb-2">Border utilities</div>

            <div class="d-flex flex-wrap gap-3 align-items-start">
                <div class="p-3 border bg-body">.border</div>
                <div class="p-3 border-0 bg-body">.border-0</div>
                <div class="p-3 border-top bg-body">.border-top</div>
                <div class="p-3 border-end bg-body">.border-end</div>
                <div class="p-3 border-bottom bg-body">.border-bottom</div>
                <div class="p-3 border-start bg-body">.border-start</div>
            </div>

            <hr class="my-3">

            <div class="small text-muted text-uppercase mb-2">Tokens</div>
            <ul class="small text-muted list-unstyled mb-0">
                <li>
                    <code>--bs-border-width</code>
                </li>
                <li>
                    <code>--bs-border-style</code>
                </li>
                <li>
                    <code>--bs-border-color</code>
                </li>
                <li>
                    <code>--bs-border-color-translucent</code>
                </li>
            </ul>
        </div>
    </div>

    {# ======================= RADIUS SCALE ======================= #}
    <div class="col-lg-6">
        <div class="border rounded-1 p-3 h-100">
            <div class="small text-muted text-uppercase mb-2">Corner radius</div>

            <div class="d-flex flex-wrap gap-3">
                <div class="p-3 border rounded-0 bg-body">.rounded-0</div>
                <div class="p-3 border rounded bg-body">.rounded</div>
                <div class="p-3 border rounded-1 bg-body">.rounded-1</div>
                <div class="p-3 border rounded-2 bg-body">.rounded-2</div>
                <div class="p-3 border rounded-3 bg-body">.rounded-3</div>
            </div>

            <div class="d-flex flex-wrap gap-3 mt-3 align-items-center">
                <div class="p-3 border rounded-top bg-body">.rounded-top</div>
                <div class="p-3 border rounded-end bg-body">.rounded-end</div>
                <div class="p-3 border rounded-bottom bg-body">.rounded-bottom</div>
                <div class="p-3 border rounded-start bg-body">.rounded-start</div>
            </div>

            <div class="d-flex flex-wrap gap-3 mt-3 align-items-center">
                <div class="border rounded-circle d-flex align-items-center justify-content-center" style="width:56px;height:56px;">.rounded-circle</div>
                <div class="px-4 py-2 border rounded-pill bg-body">.rounded-pill</div>
            </div>

            <hr class="my-3">

            <div class="small text-muted text-uppercase mb-2">Tokens</div>
            <ul class="small text-muted list-unstyled mb-0">
                <li>
                    <code>--bs-border-radius</code>
                </li>
                <li>
                    <code>--bs-border-radius-sm</code>
                </li>
                <li>
                    <code>--bs-border-radius-lg</code>
                </li>
                <li>
                    <code>--bs-border-radius-xl</code>
                </li>
                <li>
                    <code>--bs-border-radius-xxl</code>
                </li>
                <li>
                    <code>--bs-border-radius-pill</code>
                </li>
            </ul>
        </div>
    </div>
</div>
