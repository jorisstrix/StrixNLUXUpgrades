<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>
        <prototype namespace="StrixNLUxUpgrades\" resource="../../" exclude="../../Resources,../../Test,../../tests"/>

        <service id="StrixNLUxUpgrades\Core\Content\Cms\StrixLatestOrdersCmsElementResolver">
            <argument type="service" id="order.repository"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <service id="StrixNLUxUpgrades\Storefront\Page\Checkout\UnifiedDiscountSummarySubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="StrixNLUxUpgrades\Storefront\Page\FooterLanguageDataSubscriber">
            <argument type="service" id="Shopware\Storefront\Pagelet\Header\HeaderPageletLoader"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="StrixNLUxUpgrades\Storefront\Controller\StyleguideController" public="true">
            <tag name="controller.service_arguments"/>
        </service>

        <service id="StrixNLUxUpgrades\Storefront\Routing\StyleguideRouteAliasSubscriber">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
