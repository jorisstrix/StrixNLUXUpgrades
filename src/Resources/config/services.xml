<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <!-- CMS element resolver for Latest Orders -->
        <service id="StrixNLUxUpgrades\Core\Content\Cms\StrixLatestOrdersCmsElementResolver">
            <argument type="service" id="order.repository"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- Subscriber for unified discount summary -->
        <service id="StrixNLUxUpgrades\Storefront\Page\Checkout\UnifiedDiscountSummarySubscriber" public="true">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Order subscriber for adding discount line items after order creation -->
        <service id="StrixNLUxUpgrades\Core\Checkout\Order\DiscountOrderSubscriber">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_line_item.repository"/>
            <argument type="service" id="Shopware\Core\System\Snippet\SnippetService"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
